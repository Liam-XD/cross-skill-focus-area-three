{
  "name": "playwright-tests",
  "version": "1.0.0",
  "description": "End-to-end testing project using Playwright and TypeScript.",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:cucumber": "cucumber-js --require-module ts-node/register --require features/steps/**/*.ts features --format json:reports/cucumber-report.json",
    "test:all": "npm test && npm run test:cucumber",
    "report:cucumber": "node reports/generate-cucumber-report.js"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@playwright/test": "^1.43.0",
    "cucumber-html-reporter": "^7.2.0",
    "playwright-cucumber-steps": "^0.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
